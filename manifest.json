{
  "name": "Social Media Monitoring",
  "version": "0.1",
  "description": "Displays the number of unread items (e.g. tweets, etc.) with pre-defined search tags.",
  "icons": { "19": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "background_page": "background.html",
  "options_page": "options.html",
  "content_scripts": [
    { "matches": ["http://*/*"], 
      "js": ["filter.js", "content_script.js", "jquery-1.4.2.min.js"],
     "css": ["content.css"] }
  ],
 
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}