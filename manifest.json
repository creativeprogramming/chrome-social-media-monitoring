{
  "name": "My First Extension",
  "version": "1.0",
  "description": "The first extension that I made.",
  "icons": { "19": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "background_page": "background.html",
  "options_page": "options.html",
  "content_scripts": [
    { "matches": ["http://*/*"], 
      "js": ["content_script.js"],
     "css": ["content.css"] }
  ],
 
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}